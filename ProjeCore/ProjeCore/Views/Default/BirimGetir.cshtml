@model ProjeCore.Models.Birim

@{
    ViewData["Title"] = "BirimGetir";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}
<br />
@using (Html.BeginForm("BirimGuncelle", "Default", FormMethod.Post))
{
    <b>Birim ID:</b>
    @Html.TextBoxFor(item => item.BirimID, new { @class = "form-control" })
    <br />
    <b>Birim Adı:</b>
    @Html.TextBoxFor(item => item.BirimAd, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Birim Güncelle</button>
}